        "/article/count": {
            "get": {
                "tags": ["Article"],
                "summary": "Get Article Count",
                "description": "Get Article Count",
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "count": {
                                                    "type": "integer",
                                                    "example": 1
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/article/page/{pagenumber}": {
            "get": {
                "tags": ["Article"],
                "summary": "Get All Articles",
                "description": "Get All Articles",
                "parameters": [
                    {
                        "name": "pagenumber",
                        "in": "path",
                        "description": "Page number",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/article_example"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorSchema404"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/article/details/{content_id}": {
            "get": {
                "tags": ["Article"],
                "summary": "Get Article Details",
                "description": "Get Article Details",
                "parameters": [
                    {
                        "name": "content_id",
